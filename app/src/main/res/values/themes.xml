<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestFirebase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/AmarilloF</item>
        <item name="colorPrimaryVariant">@color/NaranjaF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/AmarilloF</item>
        <item name="colorSecondaryVariant">@color/AmarilloF</item>
        <item name="colorOnSecondary">@color/AzulMarinoF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/AzulMarinoF</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.TestFirebase">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Popup" parent="Theme.TestFirebase">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>