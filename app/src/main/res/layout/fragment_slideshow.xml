<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AzulMarinoF"
    tools:context=".ui.MiPerfil.SlideshowFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="170dp"
            android:layout_height="173dp"
            android:layout_gravity="center"
            android:onClick="uploadFoto"
            app:srcCompat="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Foto de perfil"
            android:textColor="@color/GrisF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40px" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Nombre de usuario"
            android:textColor="@color/GrisF" />

        <EditText
            android:id="@+id/usuarioE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="..."
            android:inputType="textPersonName"
            android:maxLength="16"
            android:textColor="@color/GrisF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20px" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Email"
            android:textColor="@color/GrisF" />

        <EditText
            android:id="@+id/emailE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="true"
            android:focusable="false"
            android:hint="example@provider.com"
            android:inputType="none"
            android:textColor="@color/GrisF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20px" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Nombre"
            android:textColor="@color/GrisF" />

        <EditText
            android:id="@+id/nombreE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="..."
            android:inputType="textPersonName"
            android:textColor="@color/GrisF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20px" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Apellidos"
            android:textColor="@color/GrisF" />

        <EditText
            android:id="@+id/apellidosE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="..."
            android:inputType="textPersonName"
            android:textColor="@color/GrisF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Biografia"
            android:textColor="@color/GrisF" />

        <EditText
            android:id="@+id/biografiaE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="..."
            android:inputType="textPersonName"
            android:textColor="@color/GrisF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/guardarB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:layout_weight="1"
                android:text="Guardar"
                android:textColor="@color/AzulMarinoF" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>